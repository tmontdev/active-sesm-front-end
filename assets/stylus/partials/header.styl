#app-header
  size 100
  no-padding()
  position fixed
  display block
  top 0
  left 0
  z-index 900
  .app-menu-bar
    size 100
    height 40px
    box-shadow 0px 0px 10px black
    background-color $blue1
    no-padding()
    .menu-item
      line-height 40px
      a
        text-decoration none
        color white
        font-size 28px
    .app-logo
      span
        line-height 20px
        font-size 16px
        text-align center
        size 100
        color white
  .shadow-rising
    position fixed
    transition all 0.5s ease-in-out
    top 0
    left 0
    size 100
    min-height 100vh
    background-color transparent
    z-index -100
  .dark
    z-index 998
    background-color alpha(black, 70%)
  .app-menu-screen
    transition all 0.5s ease-in-out
    size 100
    min-height 100vh
    position fixed
    top 0
    z-index 999
    display block
    .menu-screen-area
      box-shadow 0px 0px 10px black
      size 70
      background-color white
      min-height 100vh
      display block
      no-padding()
      .menu-screen-top
        size 100
        no-padding()
        height 40px
        line-height 40px
        text-align center
        background-color $blue2
        box-shadow 0px 0px 10px black
        color white
        margin-bottom 10px
      .menu-screen-content
        size 100
        display block
        ul
          list-style none
          no-padding()
          li
            height 40px
            size 100
            display block
            no-padding()
            border-bottom solid 1px $blue2
            transition all
            &:first-child
              border-top solid 1px $blue2
            &:hover, &:focus
              background-color $blue2
              a
                color white
                text-decoration none

            a
              size 100
              padding 5px 5px 5px 20px
              color $blue2
              font-family $font1


    .rollback-area
      size 30
      min-height 100vh
      background-color transparent

  .left
    left -110vw
  .right
    left 210vw
  .shown
    left 0 !important
